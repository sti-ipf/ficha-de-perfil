.field
  = f.input :activity_in_social_moviments, :as => :radio, :collection => [[t('yyes'), true], [t('nno'), false]], :value => @profile.activity_in_social_moviments
  :javascript
    $(document).ready(function() {
        $("#profile_activity_in_social_moviments_true").change(function() {
            if ($("#profile_activity_in_social_moviments_true").is(':checked')){
              jQuery('#social_moviments_detail').attr('style','display:block; !important');
            }
            else{
              jQuery('#social_moviments_detail').attr('style','display:none; !important');
            }
        });
        $("#profile_activity_in_social_moviments_false").change(function() {
            if ($("#profile_activity_in_social_moviments_false").is(':checked')){
              jQuery('#social_moviments_detail').attr('style','display:none; !important');
            }
        });
    });
#social_moviments_detail.hidden
  %br
  - f.fields_for :social_moviments do |builder|
    = render "social_moviment_fields", :f => builder
  %br
  = link_to_add_fields t('profile.new_social_moviment'), f, :social_moviments
